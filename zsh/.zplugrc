unset ZPLUG_CACHE_FILE

# define zplug location
export ZPLUG_HOME="$HOME/.zplug"

# check if zplug is installed, if not install it
if [[ ! -d "$ZPLUG_HOME" ]]; then
  git clone https://github.com/zplug/zplug "$ZPLUG_HOME"
fi

# source zplug/zplug
source "$ZPLUG_HOME/init.zsh"

# let zplug manage zplug
# zplug "zplug/zplug"

# zsh theme, disabled when terminal does not support 256 colors
if [ `tput colors` -ge 256 ]; then
  zplug "bhilburn/powerlevel9k", use:"powerlevel9k.zsh-theme"
fi

# oh-my-zsh
zplug "lib/completion", from:oh-my-zsh
zplug "lib/directories", from:oh-my-zsh
zplug "lib/grep", from:oh-my-zsh
zplug "lib/history", from:oh-my-zsh
zplug "lib/key-bindings", from:oh-my-zsh
zplug "lib/misc", from:oh-my-zsh
zplug "lib/termsupport", from:oh-my-zsh
zplug "lib/theme-and-appearance", from:oh-my-zsh
zplug "plugins/vi-mode", from:oh-my-zsh

# prezto
zplug "modules/ssh", from:prezto

# zsh-users
zplug "zsh-users/zsh-completions"
zplug "zsh-users/zsh-autosuggestions", at:features/async
zplug "zsh-users/zsh-history-substring-search", defer:3
zplug "zsh-users/zsh-syntax-highlighting", defer:2

# misc
# zplug "junegunn/fzf-bin", from:gh-r, as:command, rename-to:fzf
zplug "junegunn/fzf", use:"shell/*.zsh", defer:1
zplug "Tarrasch/zsh-autoenv"
zplug "schischi/xcwd", \
  as:command, \
  hook-build:"make", \
  use:"xcwd"

# configuration here needs to be processed before zplug load
# prezto
zstyle ':prezto:module:ssh:load' identities '/dev/null'

# Install plugins if there are plugins that have not been installed
if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

# run zplug
zplug load

# vim: ft=zsh
