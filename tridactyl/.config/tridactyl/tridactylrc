" sync config
sanitise tridactyllocal tridactylsync

" vimium inspired keybindings
unbind d
bind J tabprev
bind K tabnext
bind x tabclose
unbind <C-f>
unbind <C-b>

" dark theme
colors dark

" less cluttered find-link
set hintfiltermode vimperator-reflow

" use neovim with proper terminal
set editorcmd kitty nvim %f -c 'normal %lG%cl'

" allow Ctrl-a to select all in the commandline
unbind --mode=ex <C-a>

" allow Ctrl-c to copy in the commandline
unbind --mode=ex <C-c>

" vim: set filetype=vim:
