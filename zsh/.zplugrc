unset ZPLUG_CACHE_FILE

# define zplug location
export ZPLUG_HOME="$HOME/.zplug"

# clone zplug if necessary
if [[ ! -d "$ZPLUG_HOME" ]]; then
  git clone https://github.com/zplug/zplug "$ZPLUG_HOME"
fi

# source zplug/zplug
source "$ZPLUG_HOME/init.zsh"

if [ `tput colors` -ge 256 ]; then
  # 256 colors themes
  zplug "bhilburn/powerlevel9k", use:"powerlevel9k.zsh-theme"
  zplug "zsh-users/zsh-autosuggestions"
else
  # fallback when 256 colors are unavailable (i.e. Linux's TTY)
  zplug "themes/steeef", from:oh-my-zsh
fi

# let zplug manage zplug
zplug "zplug/zplug"

# oh-my-zsh
zplug "lib/*", from:oh-my-zsh

# prezto
zplug "modules/ssh", from:prezto
zplug "modules/ruby", from:prezto

# zsh-users
zplug "zsh-users/zsh-completions"
zplug "zsh-users/zsh-history-substring-search", defer:3
zplug "zsh-users/zsh-syntax-highlighting", defer:2

# misc
# zplug "junegunn/fzf-bin", from:gh-r, as:command, rename-to:fzf
zplug "junegunn/fzf", use:"shell/*.zsh", defer:1
zplug "Tarrasch/zsh-autoenv"

# prezto
zstyle ':prezto:module:ssh:load' identities '/dev/null'

# Install plugins if there are plugins that have not been installed
if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

# run zplug
zplug load

# vim: ft=zsh
